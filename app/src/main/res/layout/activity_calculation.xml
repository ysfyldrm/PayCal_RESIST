<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculationActivity"
    android:background="@drawable/bg"
    app:layout_gravity="center">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linearThree"
        android:layout_marginTop="16dp"
        >

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:id="@+id/solarIr_txt"
            android:text="Solar Irradiance"
            android:fontFamily="@font/bold"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:id="@+id/windSpeed50_txt"
            android:text="Wind Speed 50M"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/bold"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:id="@+id/windSpeed10_txt"
            android:text="Wind Speed 10M"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/bold"
            android:textColor="@color/colorPrimaryDark"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/months_txt"
        android:layout_below="@+id/linearThree"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/bold"
        android:text=" JAN\n FEN\n MAR\n APR\n MAY\n JUN\n JUL\n AUG\n SEP\n OCT\n NOV\n DEC"
        android:textColor="@color/colorPrimaryDark"
        android:lineSpacingExtra="10sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/solarIrValue_txt"
        android:layout_below="@+id/linearThree"
        android:layout_toRightOf="@id/months_txt"
        android:lineSpacingExtra="10sp"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/bold"
        android:textColor="@color/colorTransparentWhite"
        />
    <TextView
        android:id="@+id/windSp50Val"
        android:layout_below="@+id/linearThree"
        android:layout_toRightOf="@id/solarIrValue_txt"
        android:layout_marginLeft="10dp"
        android:lineSpacingExtra="10sp"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/bold"
        android:textColor="@color/colorTransparentWhite"
        />

    <TextView
        android:id="@+id/windSp10Val"
        android:layout_below="@+id/linearThree"
        android:layout_toRightOf="@id/windSp50Val"
        android:layout_marginLeft="10dp"
        android:lineSpacingExtra="10sp"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/bold"
        android:textColor="@color/colorTransparentWhite"
        />

    <ProgressBar
        android:id="@+id/dataProgress_Bar"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_below="@+id/linearThree"
        android:layout_toRightOf="@+id/months_txt"
        android:visibility="invisible"

        />
</RelativeLayout>