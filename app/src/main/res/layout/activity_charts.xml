                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/result_5"
                android:fontFamily="@font/medium"
                android:text="Output 5"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/result_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/result_5"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/medium"
                android:gravity="end"
                android:text="Title 6 : "
                android:textColor="@color/backgroundBlue"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/result_6_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/result_5_5"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/result_6"
                android:fontFamily="@font/medium"
                android:text="Output 6"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/result_7"
                android:layout_width="wrap_content"
