        android:id="@+id/bpb_main"
        app:text="Save"
        app:textColor="@color/colorTransparentWhite"
        app:type="indeterminate"
        android:layout_width="match_parent"
        app:bgColor="@color/backgroundBlue"
        android:layout_marginLeft="40dp"
