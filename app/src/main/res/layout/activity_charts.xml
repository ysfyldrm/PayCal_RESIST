                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/result_3"
                android:fontFamily="@font/medium"
                android:text="Output 3"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

