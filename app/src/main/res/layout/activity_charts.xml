                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/medium"
                android:gravity="end"
                android:text="Title 4 : "
                android:textColor="@color/backgroundBlue"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/result_4_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/result_3_3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/result_4"
                android:fontFamily="@font/medium"
                android:text="Output 4"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/result_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/result_4"
