<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".SupplierMcpSelectionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tariffSelection_txt"
        android:text="MCP Selection"
        android:fontFamily="@font/bold"
        android:textColor="@color/colorTransparentWhite"
        android:textSize="45dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tariffSelExp_txt"
        android:text="Please select your MCP entry"
        android:fontFamily="@font/bold"
        android:textColor="@color/colorTransparentWhite"
        android:textSize="17dp"
        android:layout_below="@+id/tariffSelection_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:id="@+id/button_linear"
        android:layout_below="@id/tariffSelExp_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        >

        <Button
            android:id="@+id/epdk_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Turkey's 2019\nMCP"
            />

        <Button
            android:id="@+id/useOwn_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginLeft="50dp"
            android:text="use own\nMCP"
            />

    </LinearLayout>


</RelativeLayout>