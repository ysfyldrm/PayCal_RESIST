<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".TariffSelectionActivity">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_backbutton" />

    <TextView
        android:id="@+id/tariffSelection_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/bold"
        android:text="Tariff Selection"
        android:textColor="@color/colorTransparentWhite"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/tariffSelExp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tariffSelection_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/bold"
        android:text="Please select your tariff entry"
        android:textColor="@color/colorTransparentWhite"
        android:textSize="17dp" />

    <LinearLayout
        android:id="@+id/button_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tariffSelExp_txt"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <Button
            android:id="@+id/epdk_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:elevation="20dp"
            android:fontFamily="@font/bold"
            android:text="epdk's tarÄ±ffs"
            android:textColor="@color/colorTransparentWhite" />

        <Button
            android:id="@+id/useOwn_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@drawable/button"
            android:elevation="20dp"
            android:fontFamily="@font/bold"
            android:text="use own"
            android:textColor="@color/colorTransparentWhite" />

    </LinearLayout>


</RelativeLayout>