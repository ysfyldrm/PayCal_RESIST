<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shape"
    android:orientation="vertical"

    >

    <TextView
        android:id="@+id/choose_your_consumer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bungee"
        android:text="Choose your Consumer Type"
        android:textColor="@color/colorTransparentWhite"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/residential_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_your_consumer_type"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button_res_low_voltage"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/avg_month_bill_txt"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:elevation="20dp"
            android:fontFamily="@font/bold"
            android:padding="5dp"
            android:text="RESIDENTIAL\nLOW \nVOLTAGE"
            android:textColor="@color/colorTransparentWhite"
            android:textSize="12sp"

            />

        <Button
            android:id="@+id/button_res_med_voltage"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/avg_month_bill_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button"
            android:elevation="20dp"
            android:fontFamily="@font/bold"
            android:padding="5dp"
            android:text="RESIDENTIAL\nMEDIUM \nVOLTAGE"
            android:textColor="@color/colorTransparentWhite"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/commercial_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/residential_linear"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button_com_low_voltage"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/avg_month_bill_txt"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:elevation="20dp"
            android:fontFamily="@font/bold"
            android:padding="5dp"
            android:text="COMMERCIAL\nLOW \nVOLTAGE"
            android:textColor="@color/colorTransparentWhite"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_com_med_voltage"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button"
            android:elevation="20dp"
            android:fontFamily="@font/bold"
            android:padding="5dp"
            android:text="COMMERCIAL\nMEDIUM \nVOLTAGE"
            android:textColor="@color/colorTransparentWhite"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/industrial_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commercial_linear"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button_ind_low_voltage"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:elevation="20dp"
            android:fontFamily="@font/bold"
            android:padding="5dp"
            android:text="INDUSTRIAL\nLOW \nVOLTAGE"
            android:textColor="@color/colorTransparentWhite"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_ind_med_voltage"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button"
            android:elevation="20dp"
            android:fontFamily="@font/bold"
            android:padding="5dp"
            android:text="INDUSTRIAL\nMEDIUM \nVOLTAGE"
            android:textColor="@color/colorTransparentWhite"
            android:textSize="12sp" />

    </LinearLayout>


</RelativeLayout>