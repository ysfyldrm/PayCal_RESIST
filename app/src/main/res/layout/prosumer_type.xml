<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shape"
    >

    <TextView
        android:id="@+id/choose_your_prosumer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your Prosumer Type"
        android:fontFamily="@font/bold"
        android:textColor="@color/colorTransparentWhite"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:id="@+id/residential_linear"
        android:layout_below="@+id/choose_your_prosumer_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/button_res_low_voltage"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_below="@id/avg_month_bill_txt"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:text="RESIDENTIAL\nLOW VOLTAGE"
            android:fontFamily="@font/bold"
            android:textColor="@color/colorTransparentWhite"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/button_res_med_voltage"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_below="@id/avg_month_bill_txt"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:text="RESIDENTIAL\nMEDIUM VOLTAGE"
            android:fontFamily="@font/bold"
            android:textColor="@color/colorTransparentWhite"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/commercial_linear"
        android:layout_below="@+id/residential_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/button_com_low_voltage"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_below="@id/avg_month_bill_txt"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:text="COMMERCIAL\nLOW VOLTAGE"
            android:fontFamily="@font/bold"
            android:textColor="@color/colorTransparentWhite"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/button_com_med_voltage"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_below="@id/avg_month_bill_txt"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:text="COMMERCIAL\nMEDIUM VOLTAGE"
            android:fontFamily="@font/bold"
            android:textColor="@color/colorTransparentWhite"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/industrial_linear"
        android:layout_below="@+id/commercial_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/button_ind_low_voltage"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_below="@id/avg_month_bill_txt"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:text="INDUSTRIAL\nLOW VOLTAGE"
            android:fontFamily="@font/bold"
            android:textColor="@color/colorTransparentWhite"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/button_ind_med_voltage"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_below="@id/avg_month_bill_txt"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:text="INDUSTRIAL\nMEDIUM VOLTAGE"
            android:fontFamily="@font/bold"
            android:textColor="@color/colorTransparentWhite"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            />

    </LinearLayout>



</RelativeLayout>