<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shape"
    >

    <TextView
        android:id="@+id/solararea_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How much do you want to store ?"
        android:fontFamily="@font/bold"
        android:textColor="@color/colorTransparentWhite"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_below="@id/solararea_txt"
        android:layout_marginTop="20dp"
        android:id="@+id/turbine_count_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorTransparentWhite"
            android:fontFamily="@font/bold"
            android:text="Storage %"
            />

        <TextView
            android:id="@+id/storage_percent_tview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorTransparentWhite"
            android:backgroundTint="@color/colorTransparentWhite"
            />

        <SeekBar
            android:id="@+id/storage_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorTransparentWhite"
            android:max="100"
            android:min="0"
            />
<!--            android:progressBackgroundTint=""-->



    </LinearLayout>

    <Button
        android:id="@+id/own_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_below="@id/turbine_count_txt"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:text="CONFIRM"
        android:fontFamily="@font/bold"
        android:textColor="@color/colorTransparentWhite"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        />


</RelativeLayout>