<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/enteryour_own"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bungee"
        android:text="Enter your own MCP"
        android:textColor="@color/colorTransparentWhite"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/peakMCP_txt"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/enteryour_own"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bold"
        android:gravity="end"
        android:text="Peak MCP = "
        android:textColor="@color/colorTransparentWhite"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/morningMCP_txt"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/peakMCP_txt"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bold"
        android:gravity="end"
        android:text="Morning MCP = "
        android:textColor="@color/colorTransparentWhite"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/avg_peakMCP_txt"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/morningMCP_txt"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bold"
        android:gravity="end"
        android:text="Average Peak MCP = "
        android:textColor="@color/colorTransparentWhite"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/avg_morningMCP_txt"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/avg_peakMCP_txt"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bold"
        android:gravity="end"
        android:text="Average Morning MCP = "
        android:textColor="@color/colorTransparentWhite"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/avg_yearMCP_txt"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/avg_morningMCP_txt"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bold"
        android:gravity="end"
        android:text="Average Year MCP = "
        android:textColor="@color/colorTransparentWhite"
        android:textSize="15sp" />

    <Button
        android:id="@+id/own_confirm_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/avg_yearMCP_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button"
        android:drawableLeft="@drawable/icons8_checked_64"
        android:elevation="20dp"
        android:fontFamily="@font/bungee"
        android:text="CONFIRM"
        android:textColor="@color/colorTransparentWhite"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/peakMCP_edt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/enteryour_own"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@id/peakMCP_txt"
        android:backgroundTint="@color/colorTransparentWhite"
        android:digits="0123456789.,"
        android:gravity="center"
        android:hint="$/Kwh"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="5"
        android:maxLines="1"
        android:textColor="@color/colorTransparentWhite"
        android:textColorHint="@color/colorTransparentWhite"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/morningMCP_edt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/peakMCP_edt"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@id/morningMCP_txt"
        android:backgroundTint="@color/colorTransparentWhite"
        android:digits="0123456789.,"
        android:gravity="center"
        android:hint="$/Kwh"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="5"
        android:maxLines="1"
        android:textColor="@color/colorTransparentWhite"
        android:textColorHint="@color/colorTransparentWhite"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/avg_peakMCP_edt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/morningMCP_edt"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@id/avg_peakMCP_txt"
        android:backgroundTint="@color/colorTransparentWhite"
        android:digits="0123456789.,"
        android:gravity="center"
        android:hint="$/Kwh"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="5"
        android:maxLines="1"
        android:textColor="@color/colorTransparentWhite"
        android:textColorHint="@color/colorTransparentWhite"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/avg_morningMCP_edt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/avg_peakMCP_edt"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@id/avg_morningMCP_txt"
        android:backgroundTint="@color/colorTransparentWhite"
        android:digits="0123456789.,"
        android:gravity="center"
        android:hint="$/Kwh"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="5"
        android:maxLines="1"
        android:textColor="@color/colorTransparentWhite"
        android:textColorHint="@color/colorTransparentWhite"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/avg_yearMCP_edt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/avg_morningMCP_edt"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@id/avg_yearMCP_txt"
        android:backgroundTint="@color/colorTransparentWhite"
        android:digits="0123456789.,"
        android:gravity="center"
        android:hint="$/Kwh"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="5"
        android:maxLines="1"
        android:textColor="@color/colorTransparentWhite"
        android:textColorHint="@color/colorTransparentWhite"
        android:textSize="15sp" />


</RelativeLayout>